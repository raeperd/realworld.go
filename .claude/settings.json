{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "tool-complete": {
      "Write": {
        "command": "cd ${workspaceRoot} && golangci-lint run --fix ${file}",
        "description": "Run golangci-lint with auto-fix after writing Go files",
        "when": "${file} endsWith '.go'"
      },
      "Edit": {
        "command": "cd ${workspaceRoot} && golangci-lint run --fix ${file}",
        "description": "Run golangci-lint with auto-fix after editing Go files",
        "when": "${file} endsWith '.go'"
      }
    }
  }
}
